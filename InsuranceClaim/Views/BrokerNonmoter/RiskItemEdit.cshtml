@model InsuranceClaim.Models.RiskItem1
@{
    ViewBag.Title = "RiskItemEdit";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}


<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h4>Edit Product Policy Class </h4>
                        </div>
                        <div class="form-group-input">
                            @*@using (Ajax.BeginForm("SaveCustomerData", "CustomerRegistration", new AjaxOptions { UpdateTargetId = "CustomerResult", OnSuccess = "GoToProductDetail" }))*@
                            @using (Html.BeginForm("RiskItemEdit", "BrokerNonmoter", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.HiddenFor(x => x.Id)

                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.RiskItemName, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.RiskItemName, new { @class = "form-control", @name = "InsurerName", @autocomplete = "off", @id = "ProductName", @placeholder = "Enter Product Risk Item Name" })
                                            @Html.ValidationMessageFor(x => x.RiskItemName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="next-btn">
                                    <button type="submit" class="btn">Update</button>&nbsp;
                                    <button type="button" class="btn" onclick="window.location.href='@Url.Action("NonMoterProductList", "BrokerNonmoter")'">Cancel</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>






